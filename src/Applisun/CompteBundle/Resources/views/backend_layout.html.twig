<!DOCTYPE html>
<html>
    <head>
        <title>
            {% block title %}
                Back Office compte personnel
            {% endblock %}
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/applisuncompte/bootstrap/css/bootstrap.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('bundles/applisuncompte/css/main.css') }}" type="text/css" media="all" />
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block navbar %}
                <nav class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <ul class="nav navbar-nav">
                            <li {% if app.request.attributes.get('_route') matches '/homepage/' %}class="active"{% endif %}> 
                                <a href="{{ path('homepage') }}">Accueil site</a> 
                            </li>
                            <li {% if app.request.attributes.get('_route') matches '/backend/' %}class="active"{% endif %}> 
                                <a href="{{ path('homepage') }}">Accueil Back Office</a> 
                            </li>
                            <li {% if app.request.attributes.get('_route') matches '/user/' %}class="active"{% endif %}> 
                                <a href="{{ path('users') }}">Utilisateurs</a> 
                            </li>
                            <li {% if app.request.attributes.get('_route') matches '/banque/' %}class="active"{% endif %}> 
                                <a href="{{ path('banque') }}">Banques</a> 
                            </li>
                            <li {% if app.request.attributes.get('_route') matches '/typeoperation/' %}class="active"{% endif %}> 
                                <a href="{{ path('typeoperation') }}">Types d'opération</a> 
                            </li>
                            <li {% if app.request.attributes.get('_route') matches '/category/' %}class="active"{% endif %}> 
                                <a href="{{ path('category') }}">Catégories</a> 
                            </li>
                            <li {% if app.request.attributes.get('_route') matches '/message/' %}class="active"{% endif %}> 
                                <a href="{{ path('message') }}">Messages</a> 
                            </li>
                        </ul>
                    </div>
                </nav> 
            {% endblock %}          
            {% for type, flashMessages in app.session.flashBag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endfor %}

        {% block content %}{% endblock %}           
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
            <script src="{{ asset('bundles/applisuncompte/js/bootstrap.js') }}" type="text/javascript"></script>
        {% endblock %}
    </div>    
</body>
</html>
