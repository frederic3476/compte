{% extends 'ApplisunCompteBundle::layout.html.twig' %}
{% form_theme edit_form 'ApplisunCompteBundle:Form:fields.html.twig' %}
{% block navbar %}
{% endblock %}  
{% block content %}
    <div class="col-lg-12">
        <h1>Modifier le compte</h1>
        <form class="col-lg-6" action="{{ path('compte_update', { 'id': entity.id}) }}"  method="post">
            <div class="form-group">
                {{ form_label(edit_form.numero) }}
                {{ form_widget(edit_form.numero) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.nom) }}
                {{ form_widget(edit_form.nom) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.titulaire) }}
                {{ form_widget(edit_form.titulaire) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.solde) }}
                {{ form_widget(edit_form.solde) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.type) }}
                {{ form_widget(edit_form.type) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.banque) }}
                {{ form_widget(edit_form.banque) }}
            </div>
            <div class="form-group">
                {{ form_rest(edit_form) }}
            </div>    
        </form> 
    </div>    
{% endblock %}
{% block footer %}
{% endblock %}   
{% block modal %}
{% endblock %}