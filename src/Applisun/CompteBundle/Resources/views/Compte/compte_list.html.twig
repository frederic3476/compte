<section class="col-sm-12 table-responsive">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Banque</th>
                <th>Nom</th>
                <th class="hidden-sm hidden-xs">Titulaire</th>
                <th class="hidden-sm hidden-xs">Numéro</th>
                <th>Solde</th>
                <th class="hidden-xs"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="w12p">
                    <img class="img-responsive img-small" src="{{ asset('uploads/banques/'~entity.banque.logo) }}"/>
                </td>
                <td class="w12p middle"><a href="{{ path('compte_show', { 'id': entity.id, 'year': "now"|date('Y') }) }}">{{ entity.nom }}</a></td>    
                <td class="hidden-sm hidden-xs" class="w12p middle">{{ entity.titulaire }}</td>
                <td class="hidden-sm hidden-xs" class="w12p middle">{{ entity.numero }}</td>
                <td class="w12p middle">{{ entity.solde }} &euro;</td>
                <td class="w22p middle hidden-xs">
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a data-tooltip="Voir" data-placement="bottom" class="btn btn-lg btn-info" href="{{ path('compte_show', { 'id': entity.id, 'year': "now"|date('Y') }) }}"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;</a>
                            <a data-toggle="modal" data-target="#myModal" data-tooltip="Editer" data-placement="bottom" class="btn btn-lg btn-warning" href="{{ path('compte_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span>&nbsp;</a>
                            <a data-tooltip="Graphique" data-placement="bottom" class="btn btn-lg btn-success" href="{{ path('compte_graphic', { 'id': entity.id, 'year': "now"|date('Y') }) }}"><span class="glyphicon glyphicon-signal"></span>&nbsp;</a>
                            <a data-tooltip="Supprimer" data-placement="bottom" class="btn btn-lg btn-danger" href="{{ path('compte_delete', { 'id': entity.id }) }}" onclick="if(!confirm('Etes-voius sûr ?')) { return false; }"><span class="glyphicon glyphicon-remove"></span>&nbsp;</a>                            
                        </div>
                    </div>   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
